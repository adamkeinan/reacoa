{
  "name": "reacoa",
  "version": "0.1.2",
  "description": "react+koa+electron--out-of-the-box.",
  "main": "index.js",
  "scripts": {
    "init": "npm ci & cd ./server & npm ci & cd ../front & npm ci && npm run build & cd ../",
    "start": "electron ./server",
    "build-front": "cd ./front & npm run build",
    "build-win": "electron-packager ./server reacoa --platform=win32 --arch=x64 --out ./electron --app-version 0.1.0 --overwrite --icon=./front/public/favicon.ico --asar",
    "build-linux": "electron-packager ./server reacoa --platform=linux --arch=x64 --out ./electron --app-version 0.1.0 --overwrite --icon=./front/public/favicon.ico --asar",
    "build-mac": "electron-packager ./server reacoa --platform=darwin --arch=x64 --out ../electron --app-version 0.1.0 --overwrite --icon=./front/public/favicon.ico --asar"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuri2peter/reacoa.git"
  },
  "author": "yuri2",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yuri2peter/reacoa/issues"
  },
  "homepage": "https://github.com/yuri2peter/reacoa#readme",
  "devDependencies": {
    "replace-in-file": "^3.4.3",
    "electron": "^4.0.1",
    "electron-packager": "^13.0.1",
    "fs-extra": "^7.0.0",
    "inquirer": "^6.2.1"
  }
}
